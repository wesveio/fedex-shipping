{
  "stack": "dotnet",
  "memory": 256,
  "timeout": 30,
  "ttl": 30,
  "runtimeArgs": [],
  "routes": {
    "getRates": {
      "path": "/shp-rates/calculate",
      "settingsType": "workspace",
      "public": false,
      "access": "authorized",
      "policies": [
        {
          "effect": "allow",
          "actions": ["get", "post"],
          "principals": [
            "vrn:apps:*:{{account}}:{{workspace}}:app/vtex.shipping-rates-provider@*"
          ]
        }
      ]
    },
    "track": {
      "path": "/fedex-shipping/track/:carrier/:trackingNumber",
      "public": true
    },
    "getMerchantSettings": {
      "path": "/fedex-shipping/getSettings",
      "public": false,
      "policies": [
        {
          "effect": "allow",
          "actions": ["get"]
        }
      ]
    },
    "setMerchantSettings": {
      "path": "/fedex-shipping/setSettings",
      "public": false,
      "policies": [
        {
          "effect": "allow",
          "actions": ["post"]
        }
      ]
    },
    "getEstimateDate": {
      "path": "/shp-rates/estimate/date",
      "settingsType": "workspace",
      "public": false,
      "access": "authorized",
      "policies": [
        {
          "effect": "allow",
          "actions": ["get", "post"],
          "principals": [
            "vrn:apps:*:{{account}}:{{workspace}}:app/vtex.shipping-rates-provider@*"
          ]
        }
      ]
    }
  },
  "events": {
    "onAppsLinked": {
      "sender": "apps",
      "keys": ["linked"]
    }
  }
}
